if ARCH_OWL

choice
        prompt "Actions Semi Owl SoC Variant"
        optional

config MACH_S900
        bool "Actions Semi S900 SoC"
        select ARM64

config MACH_S700
        bool "Actions Semi S700 SoC"
        select ARM64

config MACH_S500
        bool "Actions Semi S500 SoC"
        select CPU_V7A
        select TIMER
        select OWL_TIMER

endchoice

config SYS_TEXT_BASE
        default 0x11000000 if MACH_S900 || MACH_S700
        default 0x08000040 if MACH_S500

config SYS_CONFIG_NAME
        default "owl-s900" if MACH_S900 || MACH_S700
        default "owl-s500" if MACH_S500

config SYS_SOC
        default "s900" if MACH_S900
        default "s700" if MACH_S700
        default "s500" if MACH_S500

endif
